<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/carousel_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <pl.motyczko.scrollheader.PagerSlidingTabStrip
            android:id="@+id/view_pager_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/princess_mononoke"
            android:minHeight="96dip"
            app:underlineColor="#eee"
            app:dividerColor="#eee"
            app:indicatorColor="#eee"
            app:tabTextColor="#eee"
            app:parallax="true"
            android:layout_gravity="center_horizontal"
            />

    </android.support.v4.view.ViewPager>

</RelativeLayout>
